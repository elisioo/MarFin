@page "/marketing"
@inject NavigationManager Navigation
@inject AuthService AuthService
@using MarFin_Final.Services
@using MarFin_Final.Models

<div class="marketing-container" @onclick="CloseDropdowns">
    <div class="marketing-header">
        <div class="header-title">
            <h1>@(showArchivedView ? "Archived Campaigns" : "Marketing Campaigns")</h1>
            <span class="campaign-count">@filteredCampaigns.Count campaigns</span>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            @errorMessage
            <button class="alert-close" @onclick="() => errorMessage = string.Empty">×</button>
        </div>
    }
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success">
            @successMessage
            <button class="alert-close" @onclick="() => successMessage = string.Empty">×</button>
        </div>
    }

    @if (!showArchivedView)
    {
        <div class="campaign-summary">
            <h3>Campaign Performance Summary</h3>
            <div class="summary-cards">
                <div class="summary-card">
                    <div class="card-icon blue">
                        <i class="bi bi-send"></i>
                    </div>
                    <div class="card-content">
                        <h2>@MetricAsString("TotalSent")</h2>
                        <p>Total Sent</p>
                    </div>
                </div>

                <div class="summary-card">
                    <div class="card-icon blue">
                        <i class="bi bi-envelope-open"></i>
                    </div>
                    <div class="card-content">
                        <h2>@MetricAsString("AvgOpen")%</h2>
                        <p>Avg Open Rate</p>
                    </div>
                </div>

                <div class="summary-card">
                    <div class="card-icon blue">
                        <i class="bi bi-hand-index"></i>
                    </div>
                    <div class="card-content">
                        <h2>@MetricAsString("AvgClick")%</h2>
                        <p>Avg Click Rate</p>
                    </div>
                </div>

                <div class="summary-card">
                    <div class="card-icon blue">
                        <i class="bi bi-graph-up-arrow"></i>
                    </div>
                    <div class="card-content">
                        <h2>₱@(Convert.ToDecimal(metrics["TotalROI"]).ToString("N0"))</h2>
                        <p>Total Revenue</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="marketing-toolbar">
        @if (!showArchivedView)
        {
            <button class="btn-primary" @onclick="OpenAddModal">
                <i class="bi bi-plus-lg"></i> New Campaign
            </button>
        }
        else
        {
            <div></div>
        }

        <div class="toolbar-filters">
            <button class="@(showArchivedView ? "btn-primary" : "btn-filter")" @onclick="ToggleArchivedView">
                <i class="bi bi-@(showArchivedView ? "arrow-left" : "archive")"></i>
                @(showArchivedView ? "Back to Active" : "View Archived")
            </button>

            @if (!showArchivedView && (!string.IsNullOrEmpty(statusFilter) || !string.IsNullOrEmpty(typeFilter) || !string.IsNullOrEmpty(searchTerm)))
            {
                <button class="btn-filter" @onclick="ClearFilters">
                    <i class="bi bi-x-circle"></i> Clear Filters
                </button>
            }

            @if (!showArchivedView)
            {
                <div class="filter-dropdown">
                    <button class="btn-filter" @onclick="() => showStatusDropdown = !showStatusDropdown">
                        <i class="bi bi-funnel"></i> Status
                        @if (!string.IsNullOrEmpty(statusFilter))
                        {
                            <span class="filter-badge">@statusFilter</span>
                        }
                    </button>
                    @if (showStatusDropdown)
                    {
                        <div class="dropdown-menu show">
                            <button @onclick='() => { statusFilter = ""; showStatusDropdown = false; ApplyFilters(); }'>All</button>
                            <button @onclick='() => { statusFilter = "Draft"; showStatusDropdown = false; ApplyFilters(); }'>Draft</button>
                            <button @onclick='() => { statusFilter = "Active"; showStatusDropdown = false; ApplyFilters(); }'>Active</button>
                            <button @onclick='() => { statusFilter = "Completed"; showStatusDropdown = false; ApplyFilters(); }'>Completed</button>
                            <button @onclick='() => { statusFilter = "Paused"; showStatusDropdown = false; ApplyFilters(); }'>Paused</button>
                        </div>
                    }
                </div>

                <div class="filter-dropdown">
                    <button class="btn-filter" @onclick="() => showTypeDropdown = !showTypeDropdown">
                        <i class="bi bi-tag"></i> Type
                        @if (!string.IsNullOrEmpty(typeFilter))
                        {
                            <span class="filter-badge">@typeFilter</span>
                        }
                    </button>
                    @if (showTypeDropdown)
                    {
                        <div class="dropdown-menu show">
                            <button @onclick='() => { typeFilter = ""; showTypeDropdown = false; ApplyFilters(); }'>All</button>
                            <button @onclick='() => { typeFilter = "Email"; showTypeDropdown = false; ApplyFilters(); }'>Email</button>
                            <button @onclick='() => { typeFilter = "SMS"; showTypeDropdown = false; ApplyFilters(); }'>SMS</button>
                            <button @onclick='() => { typeFilter = "Social"; showTypeDropdown = false; ApplyFilters(); }'>Social</button>
                            <button @onclick='() => { typeFilter = "Other"; showTypeDropdown = false; ApplyFilters(); }'>Other</button>
                        </div>
                    }
                </div>
            }

            <div class="search-box">
                <i class="bi bi-search search-icon"></i>
                <input type="text" placeholder="Search campaigns..." @bind="searchTerm" @bind:event="oninput" @onkeyup="ApplyFilters" />
                @if (!string.IsNullOrEmpty(searchTerm))
                {
                    <button class="search-clear" @onclick="ClearSearch">×</button>
                }
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Loading campaigns...</p>
        </div>
    }
    else if (!filteredCampaigns.Any())
    {
        <div class="empty-state">
            <i class="bi bi-inbox"></i>
            <p>No campaigns found</p>
            @if (!string.IsNullOrEmpty(searchTerm) || !string.IsNullOrEmpty(statusFilter) || !string.IsNullOrEmpty(typeFilter))
            {
                <button class="btn-filter" @onclick="ClearFilters">Clear Filters</button>
            }
        </div>
    }
    else
    {
        <div class="campaigns-grid">
            @foreach (var campaign in filteredCampaigns)
            {
                <div class="campaign-card">
                    <div class="campaign-header">
                        <div class="campaign-title">
                            <i class="bi bi-tag"></i>
                            <span>@campaign.CampaignName</span>
                        </div>
                        <span class="campaign-status status-@campaign.CampaignStatus.ToLower()">
                            <i class="bi bi-circle-fill"></i> @campaign.CampaignStatus
                        </span>
                    </div>

                    <div class="campaign-metrics">
                        <div class="metric-row">
                            <span class="metric-label">Budget:</span>
                            <span class="metric-value">₱@campaign.Budget.ToString("N0")</span>
                            <span class="metric-label">Spent:</span>
                            <span class="metric-value">₱@campaign.ActualSpend.ToString("N0")</span>
                            <span class="metric-label">ROI:</span>
                            <span class="metric-value">@campaign.ROI%</span>
                        </div>
                    </div>

                    <div class="campaign-date">@campaign.DateRange</div>

                    <div class="campaign-stats">
                        <div class="stat-box">
                            <span class="stat-label">Sent</span>
                            <span class="stat-value">@campaign.TotalSent</span>
                        </div>
                        <div class="stat-box">
                            <span class="stat-label">Opened</span>
                            <span class="stat-value">@campaign.TotalOpened</span>
                            <span class="stat-percent">@campaign.OpenRate%</span>
                        </div>
                        <div class="stat-box">
                            <span class="stat-label">Clicked</span>
                            <span class="stat-value">@campaign.TotalClicked</span>
                            <span class="stat-percent">@campaign.ClickRate%</span>
                        </div>
                    </div>

                    <div class="campaign-revenue">
                        Revenue Generated: <strong>₱@campaign.RevenueGenerated.ToString("N2")</strong>
                    </div>

                    <div class="campaign-actions">
                        @if (showArchivedView)
                        {
                            <button class="action-link restore" @onclick="() => RestoreCampaign(campaign)">
                                <i class="bi bi-arrow-counterclockwise"></i> Restore
                            </button>
                        }
                        else
                        {
                            <button class="action-link" @onclick="() => OpenEditModal(campaign)">Edit</button>
                            <button class="action-link" @onclick="() => DuplicateCampaign(campaign)">Duplicate</button>
                            <button class="action-link danger" @onclick="() => ConfirmArchive(campaign)">Archive</button>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

@* Add/Edit Modal *@
@if (showModal)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal-content" @onclick:stopPropagation>
            <div class="modal-header">
                <div class="modal-title">
                    <span class="user-icon"><i class="bi bi-megaphone"></i></span>
                    <h2>@(isEditMode ? "Edit Campaign" : "New Campaign")</h2>
                </div>
                <div class="modal-actions">
                    <button class="btn-cancel" @onclick="CloseModal">Cancel</button>
                    <button class="btn-save" @onclick="SaveCampaign" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-small"></span>
                        }
                        Save Campaign
                    </button>
                </div>
            </div>

            <div class="modal-body">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">@errorMessage</div>
                }

                <div class="form-group">
                    <label>Campaign Name <span class="required">*</span></label>
                    <input type="text" class="form-control" @bind="editingCampaign.CampaignName" placeholder="Enter campaign name" />
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Campaign Type</label>
                        <select class="form-control" @bind="editingCampaign.CampaignType">
                            <option value="Email">Email</option>
                            <option value="SMS">SMS</option>
                            <option value="Social">Social</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        <select class="form-control" @bind="editingCampaign.CampaignStatus">
                            <option value="Draft">Draft</option>
                            <option value="Scheduled">Scheduled</option>
                            <option value="Active">Active</option>
                            <option value="Paused">Paused</option>
                            <option value="Completed">Completed</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Start Date</label>
                        <input type="date" class="form-control" @bind="editingCampaign.StartDate" />
                    </div>
                    <div class="form-group">
                        <label>End Date</label>
                        <input type="date" class="form-control" @bind="editingCampaign.EndDate" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Budget (₱)</label>
                        <input type="number" step="0.01" class="form-control" @bind="editingCampaign.Budget" placeholder="0.00" />
                    </div>
                    <div class="form-group">
                        <label>Actual Spend (₱)</label>
                        <input type="number" step="0.01" class="form-control" @bind="editingCampaign.ActualSpend" placeholder="0.00" />
                    </div>
                </div>

                <div class="form-group">
                    <label>Subject Line</label>
                    <input type="text" class="form-control" @bind="editingCampaign.SubjectLine" placeholder="Email subject line" />
                </div>

                <div class="form-group">
                    <label>Email Content</label>
                    <textarea class="form-control" rows="4" @bind="editingCampaign.EmailContent" placeholder="Campaign message..."></textarea>
                </div>

                <h4 class="section-title">Campaign Metrics</h4>

                <div class="form-row">
                    <div class="form-group">
                        <label>Total Sent</label>
                        <input type="number" class="form-control" @bind="editingCampaign.TotalSent" placeholder="0" />
                    </div>
                    <div class="form-group">
                        <label>Total Opened</label>
                        <input type="number" class="form-control" @bind="editingCampaign.TotalOpened" placeholder="0" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Total Clicked</label>
                        <input type="number" class="form-control" @bind="editingCampaign.TotalClicked" placeholder="0" />
                    </div>
                    <div class="form-group">
                        <label>Total Converted</label>
                        <input type="number" class="form-control" @bind="editingCampaign.TotalConverted" placeholder="0" />
                    </div>
                </div>

                <div class="form-group">
                    <label>Revenue Generated (₱)</label>
                    <input type="number" step="0.01" class="form-control" @bind="editingCampaign.RevenueGenerated" placeholder="0.00" />
                </div>
            </div>
        </div>
    </div>
}

@* Archive Confirmation *@
@if (showArchiveModal && campaignToArchive != null)
{
    <div class="modal-overlay" @onclick="CloseArchiveModal">
        <div class="modal-content confirm-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <div class="modal-title">
                    <span class="user-icon warning"><i class="bi bi-exclamation-triangle"></i></span>
                    <h2>Archive Campaign</h2>
                </div>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to archive <strong>@campaignToArchive.CampaignName</strong>?</p>
                <p class="text-muted">This campaign will be moved to the archived list but can be restored later.</p>

                <div class="modal-footer">
                    <button class="btn-cancel" @onclick="CloseArchiveModal">Cancel</button>
                    <button class="btn-danger" @onclick="ArchiveCampaign" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-small"></span>
                        }
                        Archive Campaign
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private readonly CampaignService campaignService = new();
    private List<Campaign> allCampaigns = new();
    private List<Campaign> filteredCampaigns = new();
    private Dictionary<string, object> metrics = new()
    {
        ["TotalSent"] = 0,
        ["AvgOpen"] = 0.0,
        ["AvgClick"] = 0.0,
        ["TotalROI"] = 0
    };
    private string searchTerm = "";
    private string statusFilter = "";
    private string typeFilter = "";
    private bool showStatusDropdown = false;
    private bool showTypeDropdown = false;
    private bool showModal = false;
    private bool showArchiveModal = false;
    private bool isEditMode = false;
    private bool isLoading = true;
    private bool isSaving = false;
    private bool showArchivedView = false;
    private Campaign editingCampaign = new();
    private Campaign? campaignToArchive = null;
    private string errorMessage = "";
    private string successMessage = "";
    private int currentUserId = 1;

    protected override async Task OnInitializedAsync()
    {
        if (!AuthService.IsAuthenticated)
        {
            Navigation.NavigateTo("/login", true);
            return;
        }

        currentUserId = AuthService.CurrentUser?.UserId ?? 1;
        await LoadCampaigns();
        await LoadMetrics();
    }

    private async Task LoadCampaigns()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            await Task.Run(() =>
            {
                if (showArchivedView)
                {
                    allCampaigns = campaignService.GetArchivedCampaigns() ?? new List<Campaign>();
                }
                else
                {
                    allCampaigns = campaignService.GetAllCampaigns() ?? new List<Campaign>();
                }
            });

            filteredCampaigns = new List<Campaign>(allCampaigns);
            ApplyFilters();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading campaigns: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadMetrics()
    {
        await Task.Run(() =>
        {
            metrics = campaignService.GetCampaignMetrics();
        });
        StateHasChanged();
    }

    private void ApplyFilters()
    {
        filteredCampaigns = allCampaigns;

        if (!string.IsNullOrEmpty(statusFilter))
        {
            filteredCampaigns = filteredCampaigns.Where(c => c.CampaignStatus == statusFilter).ToList();
        }

        if (!string.IsNullOrEmpty(typeFilter))
        {
            filteredCampaigns = filteredCampaigns.Where(c => c.CampaignType == typeFilter).ToList();
        }

        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            var term = searchTerm.ToLower();
            filteredCampaigns = filteredCampaigns.Where(c =>
                c.CampaignName.ToLower().Contains(term) ||
                (c.SubjectLine != null && c.SubjectLine.ToLower().Contains(term))
            ).ToList();
        }

        StateHasChanged();
    }

    private void CloseDropdowns()
    {
        showStatusDropdown = false;
        showTypeDropdown = false;
        StateHasChanged();
    }

    private void ClearFilters()
    {
        searchTerm = "";
        statusFilter = "";
        typeFilter = "";
        filteredCampaigns = new List<Campaign>(allCampaigns);
        StateHasChanged();
    }

    private void ClearSearch()
    {
        searchTerm = "";
        ApplyFilters();
    }

    private void OpenAddModal()
    {
        isEditMode = false;
        editingCampaign = new Campaign
        {
            CreatedBy = currentUserId,
            CampaignType = "Email",
            CampaignStatus = "Draft",
            StartDate = DateTime.Today,
            EndDate = DateTime.Today.AddDays(7)
        };
        errorMessage = "";
        showModal = true;
    }

    private void OpenEditModal(Campaign campaign)
    {
        isEditMode = true;
        editingCampaign = new Campaign
        {
            CampaignId = campaign.CampaignId,
            CreatedBy = campaign.CreatedBy,
            CampaignName = campaign.CampaignName,
            CampaignType = campaign.CampaignType,
            StartDate = campaign.StartDate,
            EndDate = campaign.EndDate,
            Budget = campaign.Budget,
            ActualSpend = campaign.ActualSpend,
            SubjectLine = campaign.SubjectLine,
            EmailContent = campaign.EmailContent,
            CampaignStatus = campaign.CampaignStatus,
            TotalSent = campaign.TotalSent,
            TotalOpened = campaign.TotalOpened,
            TotalClicked = campaign.TotalClicked,
            TotalConverted = campaign.TotalConverted,
            RevenueGenerated = campaign.RevenueGenerated
        };
        errorMessage = "";
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        errorMessage = "";
    }

    private async Task SaveCampaign()
    {
        if (string.IsNullOrWhiteSpace(editingCampaign.CampaignName))
        {
            errorMessage = "Campaign name is required";
            return;
        }

        try
        {
            isSaving = true;
            errorMessage = "";
            successMessage = "";
            StateHasChanged();

            bool success = false;
            await Task.Run(() =>
            {
                if (isEditMode)
                {
                    success = campaignService.UpdateCampaign(editingCampaign);
                }
                else
                {
                    success = campaignService.AddCampaign(editingCampaign);
                }
            });

            if (success)
            {
                successMessage = isEditMode ? "Campaign updated successfully!" : "Campaign created successfully!";
                CloseModal();
                await LoadCampaigns();
                await LoadMetrics();
            }
            else
            {
                errorMessage = "Failed to save campaign";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private void DuplicateCampaign(Campaign campaign)
    {
        isEditMode = false;
        editingCampaign = new Campaign
        {
            CreatedBy = currentUserId,
            CampaignName = campaign.CampaignName + " (Copy)",
            CampaignType = campaign.CampaignType,
            StartDate = DateTime.Today,
            EndDate = DateTime.Today.AddDays(7),
            Budget = campaign.Budget,
            SubjectLine = campaign.SubjectLine,
            EmailContent = campaign.EmailContent,
            CampaignStatus = "Draft"
        };
        showModal = true;
    }

    private void ConfirmArchive(Campaign campaign)
    {
        campaignToArchive = campaign;
        showArchiveModal = true;
    }

    private void CloseArchiveModal()
    {
        showArchiveModal = false;
        campaignToArchive = null;
    }

    private async Task ArchiveCampaign()
    {
        if (campaignToArchive == null) return;

        try
        {
            isSaving = true;
            StateHasChanged();

            bool success = false;
            await Task.Run(() =>
            {
                success = campaignService.ArchiveCampaign(campaignToArchive.CampaignId);
            });

            if (success)
            {
                successMessage = $"{campaignToArchive.CampaignName} archived successfully";
                CloseArchiveModal();
                await LoadCampaigns();
                await LoadMetrics();
            }
            else
            {
                errorMessage = "Failed to archive campaign";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private async Task RestoreCampaign(Campaign campaign)
    {
        try
        {
            isSaving = true;
            StateHasChanged();

            bool success = false;
            await Task.Run(() =>
            {
                success = campaignService.RestoreCampaign(campaign.CampaignId);
            });

            if (success)
            {
                successMessage = $"{campaign.CampaignName} restored successfully";
                await LoadCampaigns();
            }
            else
            {
                errorMessage = "Failed to restore campaign";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private async Task ToggleArchivedView()
    {
        showArchivedView = !showArchivedView;
        searchTerm = "";
        statusFilter = "";
        typeFilter = "";
        showStatusDropdown = false;
        showTypeDropdown = false;
        await LoadCampaigns();
    }

    private string MetricAsString(string key, string format = null)
    {
        if (metrics != null && metrics.TryGetValue(key, out var val) && val != null)
        {
            if (format == "N0") return Convert.ToDecimal(val).ToString("N0");
            return val.ToString();
        }
        return "0";
    }
}