@page "/marketing"
@inject NavigationManager Navigation
@inject AuthService AuthService
@inject CustomerService CustomerService
@inject CustomerSegmentService SegmentService
@inject EmailService EmailService
@using MarFin_Final.Database.Services
@using MarFin_Final.Models
@using MarFin_Final.Services

<div class="marketing-container" @onclick="CloseDropdowns">
    <div class="marketing-header">
        <div class="header-title">
            <h1>@(showArchivedView ? "Archived Campaigns" : "Marketing Campaigns")</h1>
            <span class="campaign-count">@filteredCampaigns.Count campaigns</span>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            @errorMessage
            <button class="alert-close" @onclick="() => errorMessage = string.Empty">×</button>
        </div>
    }
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success">
            @successMessage
            <button class="alert-close" @onclick="() => successMessage = string.Empty">×</button>
        </div>
    }

    @if (!showArchivedView)
    {
        <div class="campaign-summary">
            <h6>
                Campaign Performance Summary
                @if (!showSummaryCards)
                {
                    <span class="text-primary ms-2" style="cursor: pointer;" @onclick="ToggleSummaryCards">view</span>
                }
                else
                {
                    <span class="text-primary ms-2" style="cursor: pointer;" @onclick="ToggleSummaryCards">hide</span>
                }
            </h6>
            @if (showSummaryCards)
            {
                <div class="summary-cards">
                    <div class="summary-card">
                        <div class="card-icon blue">
                            <i class="bi bi-send"></i>
                        </div>
                        <div class="card-content">
                            <h2>@MetricAsString("TotalSent")</h2>
                            <p>Total Sent</p>
                        </div>
                    </div>

                    <div class="summary-card">
                        <div class="card-icon blue">
                            <i class="bi bi-envelope-open"></i>
                        </div>
                        <div class="card-content">
                            <h2>@MetricAsString("AvgOpen")%</h2>
                            <p>Avg Open Rate</p>
                        </div>
                    </div>

                    <div class="summary-card">
                        <div class="card-icon blue">
                            <i class="bi bi-hand-index"></i>
                        </div>
                        <div class="card-content">
                            <h2>@MetricAsString("AvgClick")%</h2>
                            <p>Avg Click Rate</p>
                        </div>
                    </div>

                    <div class="summary-card">
                        <div class="card-icon blue">
                            <i class="bi bi-graph-up-arrow"></i>
                        </div>
                        <div class="card-content">
                            <h2>₱@(Convert.ToDecimal(metrics["TotalROI"]).ToString("N0"))</h2>
                            <p>Total Revenue</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="marketing-toolbar">
        @if (!showArchivedView)
        {
            <button class="btn-primary" @onclick="OpenAddModal">
                <i class="bi bi-plus-lg"></i> New Campaign
            </button>
        }
        else
        {
            <div></div>
        }

        <div class="toolbar-filters">
            <button class="@(showArchivedView ? "btn-primary" : "btn-filter")" @onclick="ToggleArchivedView">
                <i class="bi bi-@(showArchivedView ? "arrow-left" : "archive")"></i>
                @(showArchivedView ? "Back to Active" : "View Archived")
            </button>

            @if (!showArchivedView && (!string.IsNullOrEmpty(statusFilter) || !string.IsNullOrEmpty(typeFilter) || !string.IsNullOrEmpty(searchTerm)))
            {
                <button class="btn-filter" @onclick="ClearFilters">
                    <i class="bi bi-x-circle"></i> Clear Filters
                </button>
            }

            @if (!showArchivedView)
            {
                <div class="filter-dropdown" @onclick:stopPropagation>
                    <button class="btn-filter" @onclick="ToggleStatusDropdown" @onclick:stopPropagation>
                        <i class="bi bi-funnel"></i> Status
                        @if (!string.IsNullOrEmpty(statusFilter))
                        {
                            <span class="filter-badge">@statusFilter</span>
                        }
                    </button>
                    @if (showStatusDropdown)
                    {
                        <div class="dropdown-menu show" @onclick:stopPropagation>
                            <button type="button"
                                    class="@(string.IsNullOrEmpty(statusFilter) ? "active" : "")"
                                    @onclick="() => FilterByStatus(string.Empty)">
                                All
                            </button>
                            <button type="button"
                                    class="@(statusFilter == "Draft" ? "active" : "")"
                                    @onclick='() => FilterByStatus("Draft")'>
                                Draft
                            </button>
                            <button type="button"
                                    class="@(statusFilter == "Active" ? "active" : "")"
                                    @onclick='() => FilterByStatus("Active")'>
                                Active
                            </button>
                            <button type="button"
                                    class="@(statusFilter == "Completed" ? "active" : "")"
                                    @onclick='() => FilterByStatus("Completed")'>
                                Completed
                            </button>
                            <button type="button"
                                    class="@(statusFilter == "Paused" ? "active" : "")"
                                    @onclick='() => FilterByStatus("Paused")'>
                                Paused
                            </button>
                        </div>
                    }
                </div>

                <div class="filter-dropdown" @onclick:stopPropagation>
                    <button class="btn-filter" @onclick="ToggleTypeDropdown" @onclick:stopPropagation>
                        <i class="bi bi-tag"></i> Type
                        @if (!string.IsNullOrEmpty(typeFilter))
                        {
                            <span class="filter-badge">@typeFilter</span>
                        }
                    </button>
                    @if (showTypeDropdown)
                    {
                        <div class="dropdown-menu show" @onclick:stopPropagation>
                            <button type="button"
                                    class="@(string.IsNullOrEmpty(typeFilter) ? "active" : "")"
                                    @onclick="() => FilterByType(string.Empty)">
                                All
                            </button>
                            <button type="button"
                                    class="@(typeFilter == "Email" ? "active" : "")"
                                    @onclick='() => FilterByType("Email")'>
                                Email
                            </button>
                            <button type="button"
                                    class="@(typeFilter == "SMS" ? "active" : "")"
                                    @onclick='() => FilterByType("SMS")'>
                                SMS
                            </button>
                            <button type="button"
                                    class="@(typeFilter == "Social" ? "active" : "")"
                                    @onclick='() => FilterByType("Social")'>
                                Social
                            </button>
                            <button type="button"
                                    class="@(typeFilter == "Other" ? "active" : "")"
                                    @onclick='() => FilterByType("Other")'>
                                Other
                            </button>
                        </div>
                    }
                </div>
            }

            <div class="search-box">
                <i class="bi bi-search search-icon"></i>
                <input type="text" placeholder="Search campaigns..." @bind="searchTerm" @bind:event="oninput" @onkeyup="DelaySearch" />
                @if (!string.IsNullOrEmpty(searchTerm))
                {
                    <button class="search-clear" @onclick="ClearSearch">×</button>
                }
            </div>

            <!-- View Toggle -->
            <div class="view-toggle">
                <button class="@(isCardView ? "view-btn active" : "view-btn")" @onclick="() => SetView(true)" title="Card View">
                    <i class="bi bi-grid-3x3-gap"></i>
                </button>
                <button class="@(!isCardView ? "view-btn active" : "view-btn")" @onclick="() => SetView(false)" title="Table View">
                    <i class="bi bi-list-ul"></i>
                </button>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Loading campaigns...</p>
        </div>
    }
    else if (!filteredCampaigns.Any())
    {
        <div class="empty-state">
            <i class="bi bi-inbox"></i>
            <p>No campaigns found</p>
            @if (!string.IsNullOrEmpty(searchTerm) || !string.IsNullOrEmpty(statusFilter) || !string.IsNullOrEmpty(typeFilter))
            {
                <button class="btn-filter" @onclick="ClearFilters">Clear Filters</button>
            }
        </div>
    }
    else
    {
        @if (isCardView)
        {
            <!-- Card View -->
            <div class="campaigns-grid">
                @foreach (var campaign in filteredCampaigns)
                {
                    <div class="campaign-card">
                        <div class="campaign-header">
                            <div class="campaign-title">
                                <i class="bi bi-tag"></i>
                                <span>@campaign.CampaignName</span>
                            </div>
                            <span class="campaign-status status-@campaign.CampaignStatus.ToLower()">
                                <i class="bi bi-circle-fill"></i> @campaign.CampaignStatus
                            </span>
                        </div>

                        <div class="campaign-metrics">
                            <div class="metric-row">
                                <span class="metric-label">Budget:</span>
                                <span class="metric-value">₱@campaign.Budget.ToString("N0")</span>
                                <span class="metric-label">Spent:</span>
                                <span class="metric-value">₱@campaign.ActualSpend.ToString("N0")</span>
                                <span class="metric-label">ROI:</span>
                                <span class="metric-value">@campaign.ROI%</span>
                            </div>
                        </div>

                        <div class="campaign-date">@campaign.DateRange</div>

                        <div class="campaign-stats">
                            <div class="stat-box">
                                <span class="stat-label">Sent</span>
                                <span class="stat-value">@campaign.TotalSent</span>
                            </div>
                            <div class="stat-box">
                                <span class="stat-label">Opened</span>
                                <span class="stat-value">@campaign.TotalOpened</span>
                                <span class="stat-percent">@campaign.OpenRate%</span>
                            </div>
                            <div class="stat-box">
                                <span class="stat-label">Clicked</span>
                                <span class="stat-value">@campaign.TotalClicked</span>
                                <span class="stat-percent">@campaign.ClickRate%</span>
                            </div>
                        </div>

                        <div class="campaign-revenue">
                            Revenue Generated: <strong>₱@campaign.RevenueGenerated.ToString("N2")</strong>
                        </div>

                        <div class="campaign-actions">
                            @if (showArchivedView)
                            {
                                <button class="action-link restore" @onclick="() => RestoreCampaign(campaign)">
                                    <i class="bi bi-arrow-counterclockwise"></i> Restore
                                </button>
                            }
                            else
                            {
                                <button class="action-link" @onclick="() => OpenEditModal(campaign)">Edit</button>
                                <button class="action-link" @onclick="() => DuplicateCampaign(campaign)">Duplicate</button>
                                <button class="action-link danger" @onclick="() => ConfirmArchive(campaign)">Archive</button>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Table View -->
            <div class="campaigns-table">
                <table>
                    <thead>
                        <tr>
                            <th>Campaign Name</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Date Range</th>
                            <th>Budget</th>
                            <th>Spent</th>
                            <th>Sent</th>
                            <th>Open Rate</th>
                            <th>Revenue</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var campaign in filteredCampaigns)
                        {
                            <tr>
                                <td><strong>@campaign.CampaignName</strong></td>
                                <td>@campaign.CampaignType</td>
                                <td><span class="status-badge status-@campaign.CampaignStatus.ToLower()">@campaign.CampaignStatus</span></td>
                                <td>@campaign.DateRange</td>
                                <td>₱@campaign.Budget.ToString("N0")</td>
                                <td>₱@campaign.ActualSpend.ToString("N0")</td>
                                <td>@campaign.TotalSent</td>
                                <td>@campaign.OpenRate%</td>
                                <td>₱@campaign.RevenueGenerated.ToString("N0")</td>
                                <td>
                                    <div class="action-buttons">
                                        @if (showArchivedView)
                                        {
                                            <button class="action-btn" @onclick="() => RestoreCampaign(campaign)" title="Restore">
                                                <i class="bi bi-arrow-counterclockwise"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="action-btn" @onclick="() => OpenEditModal(campaign)" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="action-btn" @onclick="() => DuplicateCampaign(campaign)" title="Duplicate">
                                                <i class="bi bi-files"></i>
                                            </button>
                                            <button class="action-btn danger" @onclick="() => ConfirmArchive(campaign)" title="Archive">
                                                <i class="bi bi-archive"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        <!-- Pagination Controls -->
        <div class="pagination-section">
            <div class="pagination-info">
                <span>Showing <strong>@((currentPage - 1) * pageSize + 1)</strong> to <strong>@Math.Min(currentPage * pageSize, totalRecords)</strong> of <strong>@totalRecords</strong> campaigns</span>
            </div>

            <div class="pagination-controls">
                <div class="page-size-selector">
                    <label>Rows per page:</label>
                    <select @bind="pageSize" @bind:after="ReloadWithNewPageSize">
                        <option value="5">5</option>
                        <option value="10">10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                    </select>
                </div>

                <div class="pagination-buttons">
                    <button class="pagination-btn" @onclick="() => ChangePage(1)" disabled="@(currentPage == 1)">
                        <i class="bi bi-chevron-double-left"></i>
                    </button>
                    <button class="pagination-btn" @onclick="() => ChangePage(currentPage - 1)" disabled="@(currentPage == 1)">
                        <i class="bi bi-chevron-left"></i>
                    </button>

                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(TotalPages, currentPage + 2); i++)
                    {
                        int pageNum = i;
                        <button class="@(currentPage == pageNum ? "pagination-btn active" : "pagination-btn")" @onclick="() => ChangePage(pageNum)">
                            @pageNum
                        </button>
                    }

                    <button class="pagination-btn" @onclick="() => ChangePage(currentPage + 1)" disabled="@(currentPage == TotalPages)">
                        <i class="bi bi-chevron-right"></i>
                    </button>
                    <button class="pagination-btn" @onclick="() => ChangePage(TotalPages)" disabled="@(currentPage == TotalPages)">
                        <i class="bi bi-chevron-double-right"></i>
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@* Multi-step Campaign Wizard Modal *@
@if (showModal)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal-content" @onclick:stopPropagation>
            <div class="modal-header">
                <div class="modal-title">
                    <span class="user-icon"><i class="bi bi-megaphone"></i></span>
                    <div>
                        <h2>@(isEditMode ? "Edit Campaign" : "New Campaign")</h2>
                        <small>Step @wizardStep of 4</small>
                    </div>
                </div>
                <div class="modal-actions">
                    <button class="btn-cancel" @onclick="CloseModal">Cancel</button>
                    <button class="btn-save" @onclick="SaveCampaign" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-small"></span>
                        }
                        Save Draft
                    </button>
                </div>
            </div>

            <div class="wizard-progress-container">
                <div class="wizard-steps-new">
                    <div class="wizard-step-new @(wizardStep >= 1 ? "active" : "") @(wizardStep > 1 ? "completed" : "")">
                        <div class="step-circle">
                            @if (wizardStep > 1)
                            {
                                <i class="bi bi-check-lg"></i>
                            }
                            else
                            {
                                <span>1</span>
                            }
                        </div>
                        <div class="step-connector @(wizardStep > 1 ? "completed" : "")"></div>
                        <span class="step-label">Details</span>
                    </div>

                    <div class="wizard-step-new @(wizardStep >= 2 ? "active" : "") @(wizardStep > 2 ? "completed" : "")">
                        <div class="step-circle">
                            @if (wizardStep > 2)
                            {
                                <i class="bi bi-check-lg"></i>
                            }
                            else
                            {
                                <span>2</span>
                            }
                        </div>
                        <div class="step-connector @(wizardStep > 2 ? "completed" : "")"></div>
                        <span class="step-label">Content</span>
                    </div>

                    <div class="wizard-step-new @(wizardStep >= 3 ? "active" : "") @(wizardStep > 3 ? "completed" : "")">
                        <div class="step-circle">
                            @if (wizardStep > 3)
                            {
                                <i class="bi bi-check-lg"></i>
                            }
                            else
                            {
                                <span>3</span>
                            }
                        </div>
                        <div class="step-connector @(wizardStep > 3 ? "completed" : "")"></div>
                        <span class="step-label">Audience</span>
                    </div>

                    <div class="wizard-step-new @(wizardStep >= 4 ? "active" : "")">
                        <div class="step-circle">
                            <span>4</span>
                        </div>
                        <span class="step-label">Review</span>
                    </div>
                </div>
            </div>



            <div class="modal-body">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">@errorMessage</div>
                }

                @if (wizardStep == 1)
                {
                    <div class="wizard-step-content">
                        <h4 class="section-title">Campaign Details</h4>

                        <div class="form-group">
                            <label>Campaign Name <span class="required">*</span></label>
                            <input type="text" class="form-control" @bind="editingCampaign.CampaignName" placeholder="Enter campaign name" />
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label>Campaign Type</label>
                                <select class="form-control" @bind="editingCampaign.CampaignType">
                                    <option value="Email">Email</option>
                                    <option value="SMS">SMS</option>
                                    <option value="Social">Social</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Status</label>
                                <select class="form-control" @bind="editingCampaign.CampaignStatus">
                                    <option value="Draft">Draft</option>
                                    <option value="Scheduled">Scheduled</option>
                                    <option value="Active">Active</option>
                                    <option value="Paused">Paused</option>
                                    <option value="Completed">Completed</option>
                                    <option value="Cancelled">Cancelled</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label>Start Date</label>
                                <input type="date" class="form-control" @bind="editingCampaign.StartDate" />
                            </div>
                            <div class="form-group">
                                <label>End Date</label>
                                <input type="date" class="form-control" @bind="editingCampaign.EndDate" />
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label>Budget (₱)</label>
                                <input type="number" step="0.01" class="form-control" @bind="editingCampaign.Budget" placeholder="0.00" />
                            </div>
                            <div class="form-group">
                                <label>Actual Spend (₱)</label>
                                <input type="number" step="0.01" class="form-control" @bind="editingCampaign.ActualSpend" placeholder="0.00" />
                            </div>
                        </div>
                    </div>
                }
                else if (wizardStep == 2)
                {
                    <div class="wizard-step-content">
                        <h4 class="section-title">Email Content</h4>

                        <div class="form-group">
                            <label>Subject Line <span class="required">*</span></label>
                            <input type="text" class="form-control" @bind="editingCampaign.SubjectLine" placeholder="Email subject line" />
                        </div>

                        <div class="form-row">
                            <div class="form-group" style="flex: 1;">
                                <label>Email Content <span class="required">*</span></label>
                                <textarea class="form-control" rows="8" @bind="editingCampaign.EmailContent" placeholder="Write your email content here..."></textarea>
                            </div>
                            <div class="form-group" style="flex: 1;">
                                <label>Live Preview</label>
                                <div class="email-preview">
                                    <strong>@(editingCampaign.SubjectLine ?? "(No subject)")</strong>
                                    <div class="email-preview-body">
                                        @((MarkupString)(editingCampaign.EmailContent ?? string.Empty))
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (wizardStep == 3)
                {
                    <div class="wizard-step-content">
                        <h4 class="section-title">Audience</h4>

                        <div class="form-row">
                            <div class="form-group">
                                <label>Customer Status</label>
                                <select class="form-control" @bind="audienceStatusFilter" @bind:after="ApplyAudienceFilters">
                                    <option value="">All statuses</option>
                                    @foreach (var status in audienceStatuses)
                                    {
                                        <option value="@status">@status</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Segment</label>
                                <select class="form-control" @bind="audienceSegmentId" @bind:after="ApplyAudienceFilters">
                                    <option value="">All segments</option>
                                    @foreach (var segment in audienceSegments)
                                    {
                                        <option value="@segment.SegmentId">@segment.SegmentName</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <p class="text-muted">Recipients with valid email: <strong>@RecipientCount</strong></p>

                        @if (isAudienceLoading)
                        {
                            <div class="loading-state">
                                <div class="spinner"></div>
                                <p>Loading audience...</p>
                            </div>
                        }
                        else if (!audienceCustomers.Any())
                        {
                            <div class="empty-state">
                                <i class="bi bi-people"></i>
                                <p>No customers match the selected filters.</p>
                            </div>
                        }
                        else
                        {
                            <div class="campaigns-table">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Segment</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var customer in audienceCustomers.Take(50))
                                        {
                                            <tr>
                                                <td>@customer.FullName</td>
                                                <td>@customer.Email</td>
                                                <td>@customer.CustomerSegment</td>
                                                <td>@customer.CustomerStatus</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                @if (audienceCustomers.Count > 50)
                                {
                                    <p class="text-muted">Showing first 50 of @audienceCustomers.Count customers.</p>
                                }
                            </div>
                        }

                        <div class="form-row" style="margin-top: 1rem;">
                            <div class="form-group" style="flex: 1;">
                                <label>Send test email</label>
                                <div class="form-row">
                                    <input type="email" class="form-control" style="flex: 1;" @bind="testEmailAddress" placeholder="your-email@example.com" />
                                    <button class="btn-secondary" style="margin-left: 0.5rem;" @onclick="SendTestEmail" disabled="@isSaving">Send Test</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (wizardStep == 4)
                {
                    <div class="wizard-step-content">
                        <h4 class="section-title">Review &amp; Send</h4>

                        <div class="review-grid">
                            <div class="review-section">
                                <h5>Details</h5>
                                <p><strong>Name:</strong> @editingCampaign.CampaignName</p>
                                <p><strong>Type:</strong> @editingCampaign.CampaignType</p>
                                <p><strong>Status:</strong> @editingCampaign.CampaignStatus</p>
                                <p><strong>Date Range:</strong> @editingCampaign.StartDate.ToShortDateString() - @editingCampaign.EndDate.ToShortDateString()</p>
                                <p><strong>Budget:</strong> ₱@editingCampaign.Budget.ToString("N0")</p>
                            </div>
                            <div class="review-section">
                                <h5>Email Preview</h5>
                                <p><strong>Subject:</strong> @editingCampaign.SubjectLine</p>
                                <div class="email-preview">
                                    <div class="email-preview-body">
