                    <h2>1,248</h2>
                    <span class="stat-change positive">
                        <i class="bi bi-arrow-up"></i> +12%
                    </span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon revenue">
                    <i class="bi bi-wallet2"></i>
                </div>
                <div class="stat-content">
                    <p class="stat-label">Revenue</p>
                    <h2>₱2.4M</h2>
                    <span class="stat-change positive">
                        <i class="bi bi-arrow-up"></i> +28%
                    </span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon campaigns">
                    <i class="bi bi-megaphone-fill"></i>
                </div>
                <div class="stat-content">
                    <p class="stat-label">Campaigns</p>
                    <h2>12</h2>
                    <span class="stat-change positive">
                        <i class="bi bi-arrow-up"></i> +8%
                    </span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon conversion">
                    <i class="bi bi-graph-up-arrow"></i>
                </div>
                <div class="stat-content">
                    <p class="stat-label">Conversion</p>
                    <h2>24.5%</h2>
                    <span class="stat-change positive">
                        <i class="bi bi-arrow-up"></i> +15%
                    </span>
                </div>
            </div>
        }
        else if (AuthService.IsFinance())
        {
            <!-- Finance sees financial stats -->
            <div class="stat-card">
                <div class="stat-icon revenue">
                    <i class="bi bi-wallet2"></i>
                </div>
                <div class="stat-content">
                    <p class="stat-label">Total Revenue</p>
                    <h2>₱2.4M</h2>
                    <span class="stat-change positive">
                        <i class="bi bi-arrow-up"></i> +28%
                    </span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-receipt"></i>
                </div>
                <div class="stat-content">
                    <p class="stat-label">Invoices</p>
                    <h2>156</h2>
                    <span class="stat-change positive">
                        <i class="bi bi-arrow-up"></i> +18%
                    </span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-arrow-left-right"></i>
                </div>
                <div class="stat-content">
                    <p class="stat-label">Transactions</p>
                    <h2>423</h2>
                    <span class="stat-change positive">
                        <i class="bi bi-arrow-up"></i> +22%
                    </span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-clock-history"></i>
                </div>
                <div class="stat-content">
                    <p class="stat-label">Pending</p>
                    <h2>₱450K</h2>
                    <span class="stat-change">
